<Window x:Class="WpfMultithreadingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multithreading App" Height="400" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Start Range:" />
            <TextBox x:Name="startRangeTextBox" Width="200" Margin="5"/>
            <TextBlock Text="End Range:" />
            <TextBox x:Name="endRangeTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Number of Threads:" />
            <TextBox x:Name="threadsCountTextBox" Width="200" Margin="5"/>

            <Button Content="Start" Click="StartButton_Click" Width="200" Margin="5"/>

            <ListBox x:Name="outputListBox" Width="400" Height="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
