<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Number Analyzer" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Name="GenerateButton" Content="Generate Numbers" Width="150" Height="30" Click="GenerateButton_Click"/>

            <TextBlock Text="Generated Numbers:" FontWeight="Bold" Margin="10"/>
            <TextBox Name="NumbersBox" Width="500" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>

            <TextBlock Text="Results:" FontWeight="Bold" Margin="10"/>
            <TextBlock Name="MinText" Text="Min: " Margin="10"/>
            <TextBlock Name="MaxText" Text="Max: " Margin="10"/>
            <TextBlock Name="AvgText" Text="Average: " Margin="10"/>

            <Button Name="SaveButton" Content="Save to File" Width="150" Height="30" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
