<Window x:Class="ChatApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="290" Width="340" ResizeMode="NoResize">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,50,0,0"/>
        <TextBox Name="UsernameTextBox" Width="150" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,30,0"/>
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,90,0,0"/>
        <PasswordBox Name="PasswordBox" Width="150" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,90,30,0"/>
        <Label Content="Confirm Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,130,0,0"/>
        <PasswordBox Name="ConfirmPasswordBox" Width="150" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,130,30,0"/>
        <Button Content="Back" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="40,0,0,30" Click="BackButton_Click"/>
        <Button Content="Register" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,30" Click="RegisterButton_Click"/>
    </Grid>
</Window>
