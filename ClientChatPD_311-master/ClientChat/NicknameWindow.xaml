<Window x:Class="ClientChat.NicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Nickname" Height="150" Width="300">
    <StackPanel Margin="10">
        <Label Content="Enter your nickname:"/>
        <TextBox x:Name="nicknameTextBox" Margin="0,5,0,0"/>
        <Button Content="OK" Margin="0,10,0,0" Click="OkButton_Click"/>
    </StackPanel>
</Window>
